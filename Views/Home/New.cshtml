@model ActivityEvent

<nav class="navbar sticky-top navbar-dark bg-dark">
    <a class="navbar-brand" href="#">
        <img src="~/images/activity.png" width="30" height="30" class="d-inline-block align-top" alt="">
        Dojo Activity Center: New Activity
    </a>
    <span>
        <a href="dashboard" class="btn btn-outline-light btn-md">Dashboard</a>
        <a href="/logout" class="btn btn-outline-light btn-md">Logout</a>
    </span>
</nav>
<div class="container body-content">
    <div class="col col-lg-10 home background">
        <div class="card" style="min-height: 35rem;">
            <h1>Create an Activity:</h1>
            <form asp-action="Create" asp-controller="Home" method="post">

                <div class="form-group">
                    <label asp-for="Title"></label>
                    <span asp-validation-for="Title"></span>
                    <input asp-for="Title" class="form-control">
                </div>

                <div class="form-group">
                    <label asp-for="Time">Time</label>
                    <input asp-for="Time" class="form-control" type="time" value="12:00:00">
                </div>
                
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <span asp-validation-for="Date"></span>
                    <input asp-for="Date" type="date" class="form-control">
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="Duration"></label>
                            <span asp-validation-for="Duration"></span>
                            <input asp-for="Duration" class="form-control">
                        </div>
                        <div class="col">
                            <label asp-for="DurationSelector"></label>
                            <span asp-validation-for="DurationSelector"></span>
                                <select asp-for="DurationSelector" class="form-control">
                                    <option value="Days">Days</option>
                                    <option value="Hours">Hours</option>
                                    <option value="Minutes">Minutes</option>
                                </select>
                            <span asp-validation-for="DurationSelector"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description"></span>
                    <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-block btn-dark">Create Activity</button>
            </form>
        </div>
    </div>
</div>