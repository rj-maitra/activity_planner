@model User

<form asp-action="Register" asp-controller="Home" method="post">
    <div>
        <p><span asp-validation-for="FirstName"></span></p>
        <p><span asp-validation-for="LastName"></span></p>
        <p><span asp-validation-for="Email"></span></p>
        <p><span asp-validation-for="Password"></span></p>
        <p><span asp-validation-for="Confirm"></span></p>
    </div>
    <div class="form-group row">
        <!-- left column -->
        <label asp-for="FirstName" class="col-sm-6 col-form-label"></label>
        <!-- right column -->
        <div class="col-sm-6">
            <input class="form-control" placeholder="First Name" asp-for="FirstName" />
        </div>
    </div>
    <div class="form-group row">
        <!-- left column -->
        <label asp-for="LastName" class="col-sm-6 col-form-label"></label>
        <!-- right column -->
        <div class="col-sm-6">
            <input class="form-control" placeholder="Last Name" asp-for="LastName" />
        </div>
    </div>
    <div class="form-group row">
        <!-- left column -->
        <label asp-for="Email" class="col-sm-6 col-form-label"></label>
        <!-- right column -->
        <div class="col-sm-6">
            <input class="form-control" placeholder="Email" asp-for="Email" />
        </div>
    </div>
    <div class="form-group row">
        <!-- left column -->
        <label asp-for="Password" class="col-sm-6 col-form-label"></label>
        <!-- right column -->
        <div class="col-sm-6">
            <input type="password" asp-for="Password" placeholder="Password" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <!-- left column -->
        <label asp-for="Confirm" class="col-sm-6 col-form-label"></label>
        <!-- right column -->
        <div class="col-sm-6">
            <input type="password" asp-for="Confirm" placeholder="Confirm Password" class="form-control">
        </div>
    </div>
    <input type="submit" value="Register" class="btn btn-block btn-dark">
</form>